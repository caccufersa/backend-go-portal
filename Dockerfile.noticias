FROM golang:1.25-alpine AS builder
WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 go build -o /bin/noticias ./services/noticias

FROM alpine:3.20
RUN apk --no-cache add ca-certificates
COPY --from=builder /bin/noticias /bin/noticias
EXPOSE 8083
CMD ["/bin/noticias"]
